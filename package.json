{
  "name": "AD",
  "version": "1.0.0",
  "description": "Arthur's Den - Visual interface for managing Claude Code tasks and interactions",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "npm run install:all && cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "claude-code",
    "ai",
    "coding-assistant",
    "developer-tools",
    "ui"
  ],
  "author": "Claude Code UI Team",
  "license": "MIT"
}